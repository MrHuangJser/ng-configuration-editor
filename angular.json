{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "editor-example": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "less",
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "ce",
      "architect": {
        "build": {
          "aot": true,
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "example",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "aot": true,
            "assets": ["src/favicon.ico", "src/assets"],
            "styles": ["src/styles.less"],
            "scripts": []
          },
          "configurations": {
            "hmr": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.hmr.ts"
                }
              ]
            },
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "editor-example:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "editor-example:build:production"
            },
            "hmr": {
              "hmr": true,
              "hmrWarning": false,
              "browserTarget": "editor-example:build:hmr"
            }
          }
        }
      }
    },
    "ngx-pangu": {
      "projectType": "library",
      "root": "projects/ngx-pangu",
      "sourceRoot": "projects/ngx-pangu/src",
      "prefix": "",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/ngx-pangu/tsconfig.lib.json",
            "project": "projects/ngx-pangu/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ngx-pangu/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/ngx-pangu/src/test.ts",
            "tsConfig": "projects/ngx-pangu/tsconfig.spec.json",
            "karmaConfig": "projects/ngx-pangu/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": ["projects/ngx-pangu/tsconfig.lib.json", "projects/ngx-pangu/tsconfig.spec.json"],
            "exclude": ["**/node_modules/**"]
          }
        }
      },
      "schematics": {
        "@schematics/angular:component": {
          "changeDetection": "OnPush",
          "viewEncapsulation": "None"
        }
      }
    }
  },
  "defaultProject": "editor-example",
  "cli": {
    "packageManager": "yarn"
  }
}
